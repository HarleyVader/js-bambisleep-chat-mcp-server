# ðŸ§  Agent Dr Girlfriend - Environment Configuration
# Copy this file to .env and fill in your API keys and preferences

# ================================================
# AI Provider Configuration
# ================================================

# Primary AI Provider (openai, anthropic, ollama, local)
AI_PROVIDER=local

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local AI Server (LMStudio compatible)
LOCAL_AI_URL=http://localhost:1234
VITE_LOCAL_AI_MODEL=local-model

# Ollama Configuration
VITE_OLLAMA_URL=http://localhost:11434
VITE_OLLAMA_MODEL=mistral

# ================================================
# Voice & Audio Configuration
# ================================================

# ElevenLabs Voice API (for custom Agent Dr Girlfriend voices)
VITE_ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
VITE_ELEVENLABS_VOICE_ID=your_preferred_voice_id

# Web Speech API Settings
VITE_SPEECH_RECOGNITION_LANG=en-US
VITE_SPEECH_SYNTHESIS_VOICE=Google UK English Female

# ================================================
# Legacy API Configuration (for backward compatibility)
# ================================================

OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
STABILITY_API_KEY=your_stability_api_key_here

# ================================================
# Agent Dr Girlfriend Personality
# ================================================

# Default interaction mode (MUSE, MENTOR, GIRLFRIEND, GHOSTWRITER)
VITE_DEFAULT_MODE=GIRLFRIEND

# Personality intensity (0.1 to 1.0)
VITE_PERSONALITY_INTENSITY=0.8

# Emotional responsiveness (0.1 to 1.0)
VITE_EMOTIONAL_RESPONSIVENESS=0.9

# Memory retention days
VITE_MEMORY_RETENTION_DAYS=30

# ================================================
# Security & Privacy
# ================================================

# Encryption key for local storage (generate a secure random string)
VITE_ENCRYPTION_KEY=your_secure_encryption_key_here
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Enable/disable analytics (true/false)
VITE_ANALYTICS_ENABLED=false

# ================================================
# Application Settings
# ================================================

NODE_ENV=development
PORT=3000

# Feature flags
ENABLE_VOICE_INPUT=true
ENABLE_EMOTIONAL_TAGGING=true
ENABLE_MEMORY_SYSTEM=true

# Logging settings
LOG_LEVEL=info

# ================================================
# Development Settings
# ================================================

# Development mode features
VITE_DEV_MODE=true
VITE_DEBUG_AI_RESPONSES=false
VITE_DEBUG_EMOTIONAL_ANALYSIS=false

# Performance monitoring
VITE_PERFORMANCE_MONITORING=false

# ================================================
# Quick Setup Instructions
# ================================================

# 1. Copy this file to .env
# 2. Choose your AI provider and set VITE_AI_PROVIDER
# 3. Add your API key for your chosen provider
# 4. Optionally configure voice settings
# 5. Restart your development server
# 6. Your Agent Dr Girlfriend is ready! ðŸ’–

