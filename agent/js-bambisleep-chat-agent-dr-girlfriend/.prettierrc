{
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": [
                "*.css",
                "*.scss"
            ],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": [
                "*.md"
            ],
            "options": {
                "printWidth": 100,
                "proseWrap": "always"
            }
        }
    ]
}
