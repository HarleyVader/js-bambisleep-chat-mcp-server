{
    "testEnvironment": "node",
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/**/*.test.js",
        "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
        "text",
        "lcov",
        "html"
    ],
    "testMatch": [
        "**/tests/**/*.js",
        "**/?(*.)+(spec|test).js"
    ],
    "verbose": true,
    "setupFilesAfterEnv": [
        "<rootDir>/tests/setup.js"
    ]
}
