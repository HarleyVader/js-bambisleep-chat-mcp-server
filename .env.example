# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# OAuth Settings - GitHub
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# OAuth Settings - Patreon
PATREON_CLIENT_ID=your_patreon_client_id_here
PATREON_CLIENT_SECRET=your_patreon_client_secret_here
PATREON_CALLBACK_URL=http://localhost:3000/auth/patreon/callback

# Session Configuration
SESSION_SECRET=your_very_long_random_session_secret_here
SESSION_NAME=mcp-session
SESSION_MAX_AGE=86400000

# Database Configuration
DATABASE_URL=sqlite:./data/database.sqlite
# For PostgreSQL: postgresql://username:password@localhost:5432/database
# For Redis: redis://localhost:6379

# MCP Server Configuration
MCP_SERVER_PORT=3001
MCP_TOOLS_DIR=./tools
MCP_WORKSPACE_DIR=./workspace

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
DEFAULT_REPO_OWNER=your_github_username
DEFAULT_REPO_NAME=your_default_repo

# Security
CORS_ORIGIN=http://localhost:3000
JWT_SECRET=your_jwt_secret_here

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
